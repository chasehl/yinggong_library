/* 页面整体 */
.page {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 统一卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* ================= 顶部状态栏 ================= */
.status-bar {
  display: flex;
  align-items: center;
}

.logo {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
}

.title-wrap {
  display: flex;
  flex-direction: column;
}

.small {
  font-size: 22rpx;
  color: #888;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 4rpx;
}

/* ================= 搜索栏 ================= */
.search-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* ================= 1x2 宫格 ================= */
.grid-1x2 {
  display: flex;
}

.grid-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.grid-cell:first-child {
  border-right: 1rpx solid #eee;
}

.icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.cell-text {
  font-size: 28rpx;
  color: #333;
}

/* ================= 2x4 宫格导航 ================= */
.nav-card {
  padding-bottom: 10rpx;
}

.nav-header {
  margin-bottom: 20rpx;
}

.nav-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
}

.nav-grid {
  display: flex;
  flex-wrap: wrap;
}

.nav-item {
  width: 25%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* ================= 为你推荐 ================= */
.recommend-section {
  padding-bottom: 16rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
}

.recommend-scroll {
  white-space: nowrap;
}

.book-card {
  display: inline-block;
  width: 220rpx;
  margin-right: 20rpx;
}

.book-cover {
  width: 220rpx;
  height: 300rpx;
  border-radius: 10rpx;
  background: #eee;
}

.book-title {
  display: block;
  font-size: 26rpx;
  margin-top: 8rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-author {
  font-size: 22rpx;
  color: #888;
  margin-top: 4rpx;
}

/* ================= 底部占位 ================= */
.bottom-space {
  height: 40rpx;
}
