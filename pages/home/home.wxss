/* 页面整体 */
.page {
  height: 100vh;
  background-color: #f5f6fa;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 统一卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* ================= 顶部状态栏 ================= */
.status-bar {
  display: flex;
  align-items: center;
}

.logo {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
}

.title-wrap {
  display: flex;
  flex-direction: column;
}

.small {
  font-size: 22rpx;
  color: #888;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 4rpx;
}

/* ================= 搜索栏 ================= */
.search-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* ================= 1x2 宫格 ================= */
.grid-1x2 {
  display: flex;
}

.grid-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.grid-cell:first-child {
  border-right: 1rpx solid #eee;
}

.icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.cell-text {
  font-size: 28rpx;
  color: #333;
}

/* ================= 2x4 宫格导航 ================= */
.nav-card {
  padding-bottom: 10rpx;
}

.nav-header {
  margin-bottom: 20rpx;
}

.nav-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #444;
}

.nav-grid {
  display: flex;
  flex-wrap: wrap;
}

.nav-item {
  width: 25%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 8rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* --- 为你推荐部分 --- */
.recommend-section {
  padding-bottom: 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4a6fa5; /* 装饰竖线 */
  padding-left: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 网格布局容器 */
.book-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; /* 两端对齐，中间留空 */
}

/* 单个书籍卡片 (3列布局，每个宽度约30%) */
.grid-item {
  width: 31%; 
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

/* 封面容器：固定高度，防止图片参差不齐 */
.cover-wrapper {
  width: 100%;
  height: 260rpx; /* 根据需要调整高度 */
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 12rpx;
  background-color: #f0f0f0;
}

.grid-cover {
  width: 100%;
  height: 100%;
}

/* 书名：限制显示1行，超出省略 */
.grid-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

/* 作者：限制显示1行 */
.grid-author {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* --- 底部按钮样式 --- */
.footer-action {
  display: flex;
  justify-content: center;
  padding-top: 10rpx;
}

.load-btn {
  font-size: 24rpx;
  color: #4a6fa5;
  padding: 10rpx 30rpx;
  background: #f0f6ff;
  border-radius: 30rpx;
}

.no-more {
  font-size: 22rpx;
  color: #ccc;
}

/* ================= 底部占位 ================= */
.bottom-space {
  height: 40rpx;
}

.top-space{
  height:40rpx;
}