/* pages/feedback/feedback.wxss */
page {
  background-color: #f6f7f9;
}

.container {
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* --- 1. 分类标签 --- */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 12rpx 30rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  border-radius: 30rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.tag-item.active {
  background: #eaf2ff;
  color: #4a6fa5;
  border-color: #4a6fa5;
  font-weight: bold;
}

/* --- 2. 文本域 --- */
.textarea-wrap {
  position: relative;
}

.feedback-input {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.ph-style {
  color: #ccc;
}

.counter {
  position: absolute;
  bottom: -10rpx;
  right: 0;
  font-size: 22rpx;
  color: #ccc;
}

/* --- 3. 图片上传 --- */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.img-item {
  width: 150rpx;
  height: 150rpx;
  position: relative;
}

.img-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.del-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
}

.upload-btn {
  width: 150rpx;
  height: 150rpx;
  background: #f9f9f9;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.plus {
  font-size: 60rpx;
  color: #ccc;
  font-weight: lighter;
  margin-bottom: -10rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #ccc;
}

/* --- 4. 联系方式 --- */
.contact-input {
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
}

/* --- 5. 底部按钮 --- */
.footer {
  margin-top: 40rpx;
  padding-bottom: 60rpx;
}

.submit-btn {
  background: #4a6fa5;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 0 6rpx 16rpx rgba(74, 111, 165, 0.3);
}

.submit-btn[disabled] {
  background: #a0b3d1;
  color: #eee;
  box-shadow: none;
}