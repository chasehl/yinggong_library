/* pages/rule/rule.wxss */
page {
  background-color: #f6f7f9;
}

.container {
  width: 100%;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部 Header --- */
.header-banner {
  background: linear-gradient(135deg, #4a6fa5, #6b8cce);
  padding: 40rpx 30rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header-sub {
  font-size: 24rpx;
  opacity: 0.8;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

/* --- 公共卡片样式 --- */
.card {
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.title-bar {
  width: 8rpx;
  height: 30rpx;
  background: #4a6fa5;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* --- 2. 权限表格 --- */
.permission-table {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.tr {
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.tr:last-child {
  border-bottom: none;
}

/* 表头样式 */
.header-row {
  background: #f0f6ff;
}

.th, .td {
  flex: 1;
  padding: 20rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.th {
  font-weight: bold;
  color: #4a6fa5;
}

.role {
  font-weight: 500;
  color: #333;
}

.table-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: right;
}

/* --- 3. 详细规则列表 --- */
.rules-container {
  /* 可以不需要额外的样式，主要靠内部的 card */
}

.rule-item {
  /* 复用 .card 的 margin */
  display: flex;
  flex-direction: column;
}

.rule-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.index-badge {
  width: 36rpx;
  height: 36rpx;
  background: #4a6fa5;
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-weight: bold;
}

.rule-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.rule-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
  padding-left: 52rpx; /* 缩进，对齐标题文字 */
}

/* --- 底部 --- */
.footer-contact {
  text-align: center;
  padding: 40rpx 0 60rpx;
  color: #ccc;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

.footer-contact text {
  margin-bottom: 10rpx;
}