/* pages/about/about.wxss */
page {
  background-color: #f6f7f9;
}

.container {
  padding: 0;
  width: 100%;
}

/* --- 1. 头部 Banner --- */
.header-banner {
  height: 400rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 黑色遮罩，让文字更清晰 */
.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4); 
  z-index: 2;
  backdrop-filter: blur(2px); /* 稍微模糊背景，显得高级 */
}

.app-info {
  position: relative;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(0,0,0,0.3);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* --- 2. 数据概览卡片 --- */
.stats-card {
  background: #fff;
  margin: -60rpx 30rpx 30rpx; /* 负边距实现上浮效果 */
  position: relative;
  z-index: 4;
  border-radius: 16rpx;
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  font-family: Arial, sans-serif;
}

.unit {
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 4rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.line {
  width: 1rpx;
  height: 50rpx;
  background: #eee;
}

/* --- 3. 简介卡片 --- */
.section-card {
  background: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4a6fa5;
  padding-left: 20rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* --- 4. 列表项 --- */
.section-list {
  background: #fff;
  margin: 0 30rpx 40rpx;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item .left {
  display: flex;
  flex-direction: column;
}

.list-item .left .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.list-item .left .value {
  font-size: 30rpx;
  color: #333;
}

.right-icon {
  font-size: 36rpx;
  padding: 10rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #4a6fa5;
  border: 1rpx solid #4a6fa5;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

/* --- 5. Footer --- */
.footer {
  text-align: center;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
}

.footer text {
  font-size: 22rpx;
  color: #ccc;
  margin-bottom: 6rpx;
}