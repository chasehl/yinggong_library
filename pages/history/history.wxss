/* pages/history/history.wxss */
page {
  background-color: #f6f7f9;
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* --- 1. 统计面板 --- */
.stats-panel {
  background: #4a6fa5; /* 主题蓝背景 */
  padding: 40rpx 20rpx;
  display: flex;
  align-items: center;
  color: #fff;
  width:100%;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-item .num {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.stats-item .label {
  font-size: 24rpx;
  opacity: 0.8;
}

.line {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255,255,255,0.3);
}

/* --- 2. 搜索栏 --- */
.search-wrap {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  width:100%;
}

.search-bar {
  background: #f0f2f5;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-bar input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.ph-style { color: #bbb; }

.clear-icon {
  padding: 10rpx;
  display: flex;
}

/* --- 3. 列表区域 --- */
.history-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.history-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.book-cover {
  width: 120rpx;
  height: 170rpx; /* 稍微小一点 */
  border-radius: 8rpx;
  background: #eee;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  margin-right: 10rpx;
  flex: 1;
  display: -webkit-box; /* 限制标题行数 */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
}

/* 状态标签 */
.status-tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.tag-blue {
  background: #f0f6ff;
  color: #4a6fa5;
  border: 1rpx solid #dae8ff;
}

.tag-red {
  background: #fff0f0;
  color: #e74c3c;
  border: 1rpx solid #ffdcdc;
}

.author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.date-row {
  font-size: 22rpx;
  color: #999;
  line-height: 1.5;
}

.date-row .value {
  color: #555;
  margin-left: 10rpx;
}

/* 空状态与底部 */
.empty-state {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-img { width: 200rpx; margin-bottom: 20rpx; opacity: 0.5; }
.empty-state text { color: #ccc; font-size: 26rpx; }

.footer-tips {
  text-align: center;
  color: #ddd;
  font-size: 22rpx;
  padding: 20rpx 0;
}