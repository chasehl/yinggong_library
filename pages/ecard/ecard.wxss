/* pages/ecard/ecard.wxss */
page {
  background-color: #f6f7f9;
}

.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* --- 卡片区域 --- */
.card-wrap {
  width: 100%;
  height: 380rpx;
  margin-bottom: 40rpx;
}

.library-card {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #2c3e50, #4a6fa5); /* 深蓝渐变 */
  border-radius: 24rpx;
  padding: 40rpx;
  box-sizing: border-box;
  color: #fff;
  box-shadow: 0 10rpx 30rpx rgba(44, 62, 80, 0.4);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-header {
  display: flex;
  align-items: center;
}

.school-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin-right: 20rpx;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.dept {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.role-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  border: 1px solid rgba(255,255,255,0.3);
}

.user-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.6);
  background: #fff;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  opacity: 0.8;
  font-family: "Courier New", Courier, monospace; /* 等宽字体像印上去的 */
}

.card-footer .label {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.card-footer .card-number {
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

/* --- 扫码区域 --- */
.code-section {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.code-title {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.barcode-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.barcode {
  width: 80%; /* 实际开发中根据条码生成器的尺寸调整 */
  height: 120rpx;
}

.code-text {
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
}

.qrcode-wrap {
  margin-bottom: 30rpx;
}

.qrcode {
  width: 300rpx;
  height: 300rpx;
}

.refresh-btn {
  font-size: 24rpx;
  color: #4a6fa5;
  display: flex;
  align-items: center;
}

/* --- 底部提示 --- */
.tips {
  margin-top: 40rpx;
  width: 100%;
}

.tips text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}