/* pages/recommend/recommend.wxss */
page {
  background-color: #f6f7f9;
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* --- 1. Banner --- */
.banner-box {
  height: 300rpx;
  background: #fff;
  position: relative;
}

.banner-img {
  width: 100%;
  height: 100%;
}

/* 兜底的渐变背景 */
.banner-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #2c3e50, #4a6fa5);
  display: flex;
  align-items: center;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.banner-text {
  color: #fff;
}

.month {
  font-size: 24rpx;
  opacity: 0.8;
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: 16rpx;
  font-family: monospace;
}

.topic {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.5;
}

/* --- 2. Tabs --- */
.tabs-header {
  background: #fff;
  display: flex;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.02);
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  font-weight: 500;
}

.tab-item.active {
  color: #4a6fa5;
  font-weight: bold;
  font-size: 30rpx;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  background: #4a6fa5;
  border-radius: 4rpx;
}

/* --- 3. 书籍列表 --- */
.book-list {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.recommend-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

/* 封面区 */
.cover-box {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.book-cover {
  width: 160rpx;
  height: 230rpx;
  border-radius: 10rpx;
  background: #eee;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.rank-badge {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  background: #e74c3c;
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx 0 10rpx 0;
  font-weight: bold;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 信息区 */
.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  flex: 1;
  margin-right: 16rpx;
}

.rating {
  display: flex;
  align-items: center;
  background: #fff8e1;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

.star {
  color: #f1c40f;
  font-size: 24rpx;
  margin-right: 4rpx;
}

.score {
  color: #e67e22;
  font-size: 22rpx;
  font-weight: bold;
}

.author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

/* 核心：推荐语样式 */
.reason-box {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.quote-mark {
  position: absolute;
  top: 4rpx;
  left: 10rpx;
  font-size: 32rpx;
  color: #ddd;
  font-family: serif;
  line-height: 1;
}

.reason-text {
  font-size: 24rpx;
  color: #555;
  line-height: 1.6;
  text-indent: 1em; /* 首行缩进 */
  display: block;
  /* 限制行数 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 标签 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #4a6fa5;
  background: #f0f6ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
}

.footer-tips {
  text-align: center;
  color: #ccc;
  font-size: 22rpx;
  padding: 20rpx 0 40rpx;
}