/* pages/faq/faq.wxss */
page {
  background-color: #f6f7f9;
  height: 100%;
}

.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 1. 搜索栏 --- */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
}

.search-box {
  background: #f0f2f5;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 16rpx;
  color: #333;
}

.clear-btn {
  padding: 10rpx;
}

/* --- 2. 分类导航 --- */
.category-scroll {
  background: #fff;
  white-space: nowrap;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-shrink: 0;
}

.cat-item {
  display: inline-block;
  padding: 0 30rpx;
  line-height: 86rpx; /* 留2px给下划线 */
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.cat-item.active {
  color: #4a6fa5;
  font-weight: bold;
  font-size: 30rpx;
}

.cat-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #4a6fa5;
  border-radius: 4rpx;
}

/* --- 3. 问答列表 --- */
.qa-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.qa-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

/* 问题行 */
.question-row {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
}

.q-icon {
  width: 40rpx;
  height: 40rpx;
  background: #eaf2ff;
  color: #4a6fa5;
  font-size: 24rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.q-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

.arrow-icon {
  font-size: 20rpx;
  color: #ccc;
  margin-left: 20rpx;
  transition: transform 0.3s; /* 旋转动画 */
}

/* 箭头旋转类 */
.arrow-icon.rotate {
  transform: rotate(180deg);
}

/* 答案行 */
.answer-row {
  background: #fcfcfc;
  border-top: 1rpx solid #f5f5f5;
  padding: 24rpx 24rpx 30rpx 84rpx; /* 左侧留白与文字对齐 */
}

.a-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* 空状态 */
.empty-state {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-img { width: 200rpx; margin-bottom: 20rpx; opacity: 0.5; }
.empty-state text { color: #999; font-size: 28rpx; }

.footer-space { height: 100rpx; }

/* --- 4. 底部按钮 --- */
.footer-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.03);
}

.feedback-btn {
  background: #fff;
  color: #4a6fa5;
  border: 1rpx solid #4a6fa5;
  border-radius: 44rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}