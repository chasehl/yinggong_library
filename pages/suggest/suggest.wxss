/* pages/suggest/suggest.wxss */
page {
  background-color: #f6f7f9;
  height: 100%;
}

.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- Tab Header --- */
.tabs-header {
  background: #fff;
  display: flex;
  height: 90rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4a6fa5;
  font-weight: bold;
  font-size: 30rpx;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 6rpx;
  background: #4a6fa5;
  border-radius: 4rpx;
}

/* --- Content Body --- */
.content-body {
  flex: 1;
  position: relative;
  overflow: hidden; /* 确保 scroll-view 正常工作 */
}

/* === Form Styles === */
.form-scroll {
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 扫码卡片 */
.scan-card {
  background: #eaf2ff;
  border: 2rpx dashed #adc6ff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.scan-btn {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #4a6fa5;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.scan-tip {
  font-size: 22rpx;
  color: #8fa0c0;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  padding: 20rpx 0;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.divider {
  height: 1rpx;
  background: #f5f5f5;
  width: 100%;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.label.required::after {
  content: "*";
  color: #e74c3c;
  margin-left: 4rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
  line-height: 1.5;
}

.char-count {
  align-self: flex-end;
  font-size: 22rpx;
  color: #ccc;
}

.submit-btn {
  background: #4a6fa5;
  color: #fff;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(74, 111, 165, 0.3);
}

.form-tips {
  text-align: center;
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #999;
}

/* === History Styles === */
.history-scroll {
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.history-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}
.status-pending { background: #eaf2ff; color: #4a6fa5; } /* 审核中 */
.status-buying { background: #fff7e6; color: #fa8c16; } /* 采购中 */
.status-done { background: #f6ffed; color: #52c41a; }    /* 已上架 */
.status-rejected { background: #fff1f0; color: #f5222d; } /* 已驳回 */

.book-info {
  margin-bottom: 20rpx;
}

.book-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.book-author {
  font-size: 26rpx;
  color: #666;
}

.feedback-box {
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
}

.feedback-box.reject { background: #fff1f0; color: #555; }
.feedback-box.success { background: #f6ffed; color: #555; }

.fb-label {
  font-weight: bold;
  margin-right: 10rpx;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-img { width: 200rpx; margin-bottom: 20rpx; opacity: 0.5; }
.empty-state text { color: #999; font-size: 28rpx; }