/* pages/favorite/favorite.wxss */
page {
  background-color: #f6f7f9;
  height: 100%;
}

.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部栏 --- */
.top-bar {
  background: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.total-count {
  font-size: 26rpx;
  color: #999;
}

.manage-btn {
  font-size: 28rpx;
  color: #4a6fa5;
  font-weight: 500;
}

/* --- 2. 列表区域 --- */
.list-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center; /* 垂直居中 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  position: relative;
}

/* 勾选框区域 */
.checkbox-area {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

/* 封面 */
.book-cover {
  width: 120rpx;
  height: 170rpx;
  border-radius: 8rpx;
  background: #eee;
  flex-shrink: 0;
  margin-right: 24rpx;
}

/* 信息区 */
.book-info {
  flex: 1;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-top {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.author {
  font-size: 24rpx;
  color: #666;
}

/* 状态区 */
.info-bottom {
  font-size: 24rpx;
}

.status-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.label {
  color: #999;
}

.status-badge {
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.status-badge.green {
  background: #e1f3d8;
  color: #67c23a;
}

.status-badge.orange {
  background: #fdf6ec;
  color: #e6a23c;
}

.call-no {
  color: #4a6fa5;
  font-family: monospace;
}

.return-date {
  color: #999;
}

/* 单删按钮 */
.action-area {
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.heart-icon {
  width: 40rpx;
  height: 40rpx;
  /* 如果没有实心红心图，可以用 css filter 变色，或者直接找个垃圾桶图标 */
  opacity: 0.6; 
}

/* --- 3. 底部批量栏 --- */
.bottom-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 10rpx rgba(0,0,0,0.05);
  z-index: 99;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.select-all icon {
  margin-right: 14rpx;
}

.delete-btn {
  background: #e74c3c;
  color: #fff;
  font-size: 28rpx;
  margin: 0;
  border-radius: 40rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.delete-btn[disabled] {
  background: #fab6b6;
  color: #fff;
}

/* 空状态 */
.empty-state {
  padding-top: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-img { width: 200rpx; margin-bottom: 20rpx; opacity: 0.5; }
.empty-state text { color: #999; font-size: 28rpx; margin-bottom: 40rpx;}

.go-search-btn {
  border: 1rpx solid #4a6fa5;
  color: #4a6fa5;
  background: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0 50rpx;
}