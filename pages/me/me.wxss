/* pages/me/me.wxss */
.me-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e4e8f0 100%);
  padding-bottom: 40rpx;
}

/* 1. 用户信息卡片 */
.user-card {
  position: relative;
  margin: 0 30rpx 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(91, 134, 229, 0.15);
}

.user-bg {
  height: 180rpx;
  background: linear-gradient(135deg, #5B86E5, #36D1DC);
}

.user-info {
  position: relative;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin-top: -60rpx;
  border-radius: 20rpx;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  background: #f0f0f0;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #5B86E5;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.user-main {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #888;
  background: #f5f7fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.user-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.login-btn, .logout-btn {
  min-width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
}

/* 2. 数据统计卡片 */
.stats-card {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 42rpx;
  font-weight: bold;
  color: #5B86E5;
  margin-bottom: 8rpx;
}

.stats-number.overdue.has-overdue {
  color: #fa5151;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

/* 3. 功能菜单 */
.menu-section {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-list {
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
}

.icon-borrowed { background: linear-gradient(135deg, #36D1DC, #5B86E5); }
.icon-reserved { background: linear-gradient(135deg, #FF9A9E, #FAD0C4); }
.icon-history { background: linear-gradient(135deg, #A3BFFA, #6991C7); }
.icon-favorites { background: linear-gradient(135deg, #42e695, #3BB2B8); }
.icon-settings { background: linear-gradient(135deg, #C471F5, #FF9A9E); }
.icon-message { background: linear-gradient(135deg, #FFD26F, #FF9A9E); }
.icon-feedback { background: linear-gradient(135deg, #76b2fe, #b69efe); }
.icon-about { background: linear-gradient(135deg, #5ee7df, #b490ca); }

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-badge {
  background: #fa5151;
  color: white;
  font-size: 22rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 18rpx;
  text-align: center;
  margin-right: 20rpx;
  padding: 0 8rpx;
}

.menu-arrow {
  color: #ccc;
  font-size: 26rpx;
}

.menu-divider {
  height: 20rpx;
  background: #f8f9fa;
}

/* 4. 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.primary {
  background: linear-gradient(135deg, #5B86E5, #36D1DC);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #5B86E5;
  border: 2rpx solid #5B86E5;
}

.action-icon {
  margin-right: 12rpx;
  font-size: 40rpx;
}

/* 5. 底部信息 */
.footer {
  text-align: center;
  padding-top: 40rpx;
  border-top: 1rpx solid #e0e0e0;
  margin: 0 30rpx;
}

.version, .copyright {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}