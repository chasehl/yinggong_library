/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  height: 100vh;
  background-color: #fff;
}
.logo { width: 160rpx; height: 160rpx; border-radius: 50%; margin-bottom: 30rpx; background: #eee;}
.title { font-size: 40rpx; font-weight: bold; margin-bottom: 20rpx; }
.subtitle { font-size: 26rpx; color: #888; margin-bottom: 100rpx; }

.login-btn {
  width: 80%;
  background-color: #4a6fa5;
  color: white;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
}
.cancel-btn {
  width: 80%;
  background-color: #f0f2f5;
  color: #666;
  border-radius: 40rpx;
}